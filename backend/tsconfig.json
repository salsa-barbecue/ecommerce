{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/public/**/*.jpg",
    "./src/public/**/*.webp",
    "./src/public/**/*.png",
  ]
}
